<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>serv</servlet-name>
        <servlet-class>app.serv</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SingleBook</servlet-name>
        <servlet-class>app.SingleBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>submit</servlet-name>
        <servlet-class>app.submit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartHandler</servlet-name>
        <servlet-class>app.CartHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BooksToken</servlet-name>
        <servlet-class>app.BooksToken</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetByIsbn</servlet-name>
        <servlet-class>app.GetByIsbn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRemoveItem</servlet-name>
        <servlet-class>app.AddRemoveItem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>incrDecrAmount</servlet-name>
        <servlet-class>app.incrDecrAmount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>serv</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SingleBook</servlet-name>
        <url-pattern>/book</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>submit</servlet-name>
        <url-pattern>/submit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartHandler</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BooksToken</servlet-name>
        <url-pattern>/allbooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetByIsbn</servlet-name>
        <url-pattern>/isbn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRemoveItem</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>incrDecrAmount</servlet-name>
        <url-pattern>/amount</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
          25
        </session-timeout>
    </session-config>
    <ejb-local-ref>
        <ejb-ref-name>booksbean</ejb-ref-name>
        <local>beans.booksbeanLocal</local>
        <ejb-link>newtwo-ejb.jar#booksbean</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>bean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>beans.beanLocal</local>
        <ejb-link>newtwo-ejb.jar#bean</ejb-link>
    </ejb-local-ref>
</web-app>
